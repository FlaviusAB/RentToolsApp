<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="Alerts"
        android:icon="@drawable/ic_baseline_notifications_24">
    <SwitchPreference
        android:key="switch_preference_notif"
        android:title="@string/notifi"
        android:summary="on"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="General"
        android:icon="@drawable/ic_baseline_settings_24">

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_dark"
            android:title="Dark theme"
            android:summary="off"/>

    </PreferenceCategory>
    <PreferenceCategory android:title="App color"
        android:icon="@drawable/ic_baseline_color_lens_24">

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_color"
            android:title="Blue" />
    </PreferenceCategory>

</PreferenceScreen>